{
    "name": "default-webapp-elm-now",
    "version": "0.7.11",
    "description": "Default Webapp - An opinionated/favourite setup for web application development",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eirikt/default-webapp-elm-now.git"
    },
    "scripts": {
        "setup": "npm install",
        "clean:build": "rimraf build",
        "clean:elm": "npm run elm:clean",
        "clean": "npm-run-all --parallel clean:*",
        "check:1": "npm audit",
        "check:2": "npm-check",
        "check:3": "npm run elm:analyse",
        "check:4": "sass-lint '**/*.scss' --verbose --no-exit",
        "check": "npm-run-all --serial check:*",
        "sleep": "sleepms 1000",
        "elm:clean": "rimraf elm-stuff",
        "elm:format-main": "elm-format src/elm/ --yes",
        "elm:format-test": "elm-format tests/ --yes",
        "elm:format": "npm-run-all --parallel elm:format-main elm:format-test",
        "elm:test": "elm-test",
        "elm:analyse": "elm-analyse",
        "elm:analyse-server": "elm-analyse -s",
        "elm:analyse-gui-open": "opn http://localhost:3000",
        "elm:analyse-gui": "npm-run-all --serial elm:analyse-server elm:analyse-gui-open",
        "webpack:dev-server": "webpack-dev-server --mode=development --hot",
        "webpack:development": "webpack --mode=development",
        "webpack:production": "webpack --mode=production",
        "dev": "npm-run-all --serial setup webpack:dev-server",
        "build": "npm run build:production",
        "build:dev": "npm run build:development",
        "build:development": "npm-run-all --serial webpack:development elm:test",
        "build:prod": "npm run build:production",
        "build:production": "npm-run-all --serial setup webpack:production elm:format elm:test",
        "zeit:now": "now build",
        "zeit:now-alias": "now alias",
        "deploy": "npm run deploy:staging",
        "deploy:staging": "npm-run-all --serial clean build:production zeit:now",
        "deploy:prod": "npm run deploy:production",
        "deploy:production": "npm run zeit:now-alias"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^4.6.0",
        "css-loader": "^2.1.0",
        "elm-analyse": "^0.16.0",
        "elm-hot-webpack-loader": "^1.0.2",
        "elm-test": "^0.19.0",
        "elm-webpack-loader": "^5.0.0",
        "html-webpack-plugin": "^3.2.0",
        "node-sass": "^4.11.0",
        "npm-check": "^5.9.0",
        "npm-run-all": "^4.1.5",
        "opn-cli": "^4.0.0",
        "sass-lint": "^1.12.1",
        "sass-loader": "^7.1.0",
        "sleep-ms": "^2.0.1",
        "style-loader": "^0.23.1",
        "webpack": "^4.28.3",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.14"
    }
}
