{
    "name": "default-webapp-elm-now",
    "version": "0.5.5",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eirikt/default-webapp-elm-now.git"
    },
    "scripts": {
        "setup": "npm install",
        "clean": "rimraf build & npm run clean:elm",
        "clean:elm": "npm run elm:clean",
        "check:1": "npm audit",
        "check:2": "npm-check",
        "check:3": "npm run elm:analyse",
        "check:4": "sass-lint '**/*.scss' --verbose --no-exit",
        "elm:clean": "rimraf elm-stuff",
        "elm:format": "elm-format src/elm/ --yes",
        "elm:analyse": "elm-analyse",
        "build": "webpack",
        "deploy": "npm run deploy:staging",
        "deploy:staging": "npm run setup & npm run clean & npm run build & now build --public",
        "deploy:prod": "npm run deploy:production",
        "deploy:production": "now alias"
    },
    "devDependencies": {
        "css-loader": "^1.0.0",
        "elm-analyse": "^0.15.0",
        "elm-webpack-loader": "^5.0.0",
        "html-webpack-plugin": "^3.2.0",
        "node-sass": "^4.9.4",
        "npm-check": "^5.9.0",
        "sass-lint": "^1.12.1",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.2"
    }
}
