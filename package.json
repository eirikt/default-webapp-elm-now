{
    "name": "default-webapp-elm-now",
    "version": "0.7.7",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eirikt/default-webapp-elm-now.git"
    },
    "scripts": {
        "setup": "npm install",
        "clean": "rimraf build & npm run clean:elm",
        "clean:elm": "npm run elm:clean",
        "check:1": "npm audit",
        "check:2": "npm-check",
        "check:3": "npm run elm:analyse",
        "check:4": "sass-lint '**/*.scss' --verbose --no-exit",
        "elm:clean": "rimraf elm-stuff",
        "elm:format": "elm-format src/elm/ --yes",
        "elm:analyse": "elm-analyse",
        "dev": "npm run setup & webpack-dev-server --mode=development --hot",
        "build": "npm run build:production",
        "build:quick": "webpack --mode=development",
        "build:dev": "npm run build:development",
        "build:development": "npm run setup & npm run build:quick",
        "build:prod": "npm run build:production",
        "build:production": "npm run setup & webpack --mode=production",
        "deploy": "npm run deploy:staging",
        "deploy:staging": "npm run clean & npm run build:production & now build",
        "deploy:prod": "npm run deploy:production",
        "deploy:production": "now alias"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^4.6.0",
        "css-loader": "^1.0.1",
        "elm-analyse": "^0.15.0",
        "elm-hot-webpack-loader": "^1.0.2",
        "elm-webpack-loader": "^5.0.0",
        "html-webpack-plugin": "^3.2.0",
        "node-sass": "^4.10.0",
        "npm-check": "^5.9.0",
        "sass-lint": "^1.12.1",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "webpack": "^4.25.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10"
    }
}
